@model WebAnVat.Models.Mon

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center my-4">Details</h2>

<div class="container mt-4">
    <h4 class="mb-3">Mon</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.TenMon)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TenMon)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.GiaBan)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.GiaBan)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.HinhAnh)
        </dt>
        <dd class="col-sm-9">
