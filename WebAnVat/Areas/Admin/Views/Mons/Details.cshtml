        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.LoaiMonAn.TenLoaiMonAn)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.LoaiMonAn.TenLoaiMonAn)
        </dd>
    </dl>

    <div class="form-actions">
        <div class="d-flex justify-content-between">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID_Mon }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
