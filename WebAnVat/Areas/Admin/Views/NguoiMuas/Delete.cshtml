@model WebAnVat.Models.NguoiMua

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center my-4 text-danger">Xóa Người Mua</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h3 class="text-center mb-4">Bạn có chắc chắn muốn xóa người mua này?</h3>

<div class="container">
    <h4 class="mb-3">Thông Tin Người Mua</h4>
    <hr />

    <div class="row mb-3">
        <div class="col-md-3">
            <strong>@Html.DisplayNameFor(model => model.Ten)</strong>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Ten)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <strong>@Html.DisplayNameFor(model => model.Sdt)</strong>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Sdt)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <strong>@Html.DisplayNameFor(model => model.Email)</strong>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <strong>@Html.DisplayNameFor(model => model.MatKhau)</strong>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.MatKhau)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <strong>@Html.DisplayNameFor(model => model.UserType)</strong>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.UserType)
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-danger">Xóa</button>
            @Html.ActionLink("Quay lại danh sách", "Index", new { @class = "btn btn-secondary" })
        </div>
    }
</div>
