@model IEnumerable<WebAnVat.Models.NguoiMua>

@{
    ViewBag.Title = "Danh sách người mua";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4 mb-4">Danh sách người mua</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Thêm người mua mới
    </a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Ten)</th>
            <th>@Html.DisplayNameFor(model => model.Sdt)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                <td>@Html.DisplayFor(modelItem => item.Sdt)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td class="text-center">
                    <a href="@Url.Action("Edit", new { id = item.ID_NgMua })" class="btn btn-sm btn-warning">
                        <i class="fa-solid fa-edit"></i> Sửa
                    </a>
                    <a href="@Url.Action("Details", new { id = item.ID_NgMua })" class="btn btn-sm btn-info">
                        <i class="fa-solid fa-info-circle"></i> Chi tiết
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.ID_NgMua })" class="btn btn-sm btn-danger">
                        <i class="fa-solid fa-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
