@using WebAnVat.Models
@model NguoiMua
@{
    ViewBag.Title = "Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quên Mật Khẩu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/asset/css/ForgetPassWord.css" />
</head>
<body>
    <div class="container-fluid">
        <form class="col-12 col-sm-8 col-md-6 col-lg-3 mx-auto p-4 forget-password-form" method="post" action="@Url.Action("ForgetPW", "Account")">
            <h4 class="text-center">Quên Mật Khẩu</h4>
            <div class="mb-3">
                <label for="InputEmail" class="form-label">Email của bạn</label>
                <input type="email" name="email" class="form-control" id="InputEmail" required />
            </div>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            }
            <button type="submit" class="btn btn-primary">Gửi liên kết đặt lại mật khẩu</button>
            <div class="mt-3 text-center">
                <a class="mt-4 d-lg-block" href="@Url.Action("Login", "Account")">Trở về trang đăng nhập</a>
            </div>
        </form>
    </div>
</body>
</html>


