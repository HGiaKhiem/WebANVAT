@using WebAnVat.Models
@model NguoiMua
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/asset/css/base.css"/>
    <link rel="stylesheet" href="~/asset/css/Login.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="wrap-login col-12 col-sm-8 col-md-6 col-lg-3 mx-auto p-4">
            <h4 class="text-center" style="color: var(--primary-color)"> Login</h4>

            <form action="@Url.Action("Login","Account")" method="post">
                <div class="mb-3">
                    <label for="InputEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="InputEmail" name="email" required />
                </div>
                <div class="mb-3">
                    <label for="InputPassword" class="form-label">Password</label>
                    <input type="password" class="form-control" id="InputPassword" name="mk" required />
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>

            <div id="emailHelp" class="form-text mt-3">
                <a class="mt-4 d-lg-block" href="@Url.Action("ForgetPW", "Account")">Forget Password ?</a>
            </div>

            <div class="mt-3 text-center">
                <a class="mt-4 d-lg-block" href="@Url.Action("Register", "Account")">Chưa có tài khoản? Đăng kí ngay</a>
            </div>
        </div>
    </div>
</body>
</html>
