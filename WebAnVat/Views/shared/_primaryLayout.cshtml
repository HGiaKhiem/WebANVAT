<!-- Modal phương thức nhận hàng-->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-method__content modal-content">
            <div class="container modal-method__header">
                <div class="row modal-method__list">
                    <div class="modal-method__item active col-md-6">
                        Giao hàng
                        <div class="modal-method__line active"></div>
                    </div>
                    <div class="modal-method__item col-md-6">
                        Đến lấy hàng
                        <div class="modal-method__line"></div>
                    </div>
                </div>
            </div>
            <div class="modal-method__body active">
                <div class="modal-method__box active">
                    <div class="modal-method__search">
                        <div class="modal-method__icon-search">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </div>
                        <input type="text" class="modal-method__ip" placeholder="Vui lòng nhập địa chỉ">
                    </div>
                    <div class="modal-method__location">
                        <div class="modal-method__location-icon">
                            <i class="fa-solid fa-location-crosshairs"></i>
                        </div>
                        <div class="modal-method__location-text">Vị trí hiện tại của bạn</div>
                    </div>
                </div>

                <div class="modal-method__box">
                    <div class="modal-method__search">
                        <div class="modal-method__icon-search">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </div>
                        <input type="text" class="modal-method__ip" placeholder="Vui lòng nhập địa điểm, tên cửa hàng">
                    </div>
                </div>
            </div>
            <button type="button" class="modal-method__btn" data-bs-dismiss="modal" aria-label="Close">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>
    </div>

